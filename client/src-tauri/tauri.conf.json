{
  "productName": "DioraServerConnecter",
  "version": "1.0.0",
  "identifier": "kr.co.dioramarketing.serverconnecter",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "DioraServerConnecter",
        "width": 1024,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installMode": "currentUser",
        "languages": ["Korean", "English"],
        "startMenuFolder": "DioraServerConnecter"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "shortDescription": "Diora 개발 서버 원격 접속 클라이언트",
    "longDescription": "DioraServerConnecter는 회사 서버의 격리된 Docker 컨테이너 개발 환경에 안전하게 접속할 수 있는 데스크톱 클라이언트입니다.",
    "copyright": "© 2026 Diora Marketing",
    "category": "DeveloperTool",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVFOTEzNkE3MTE3RDIxMDQKUldRRUlYMFJwemFSN211UkovVXlkaDNlQ25yZjlTUi9IT0RZQWQ0SDRuckZ5dHh1SDFVTU5RaW8K",
      "endpoints": [
        "http://192.168.0.100:4000/api/v1/updates/check/{{target}}/{{current_version}}"
      ]
    }
  }
}
