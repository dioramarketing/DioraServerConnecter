generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================
// User
// ============================================================
enum UserRole {
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

model User {
  id               String     @id @default(cuid())
  username         String     @unique
  email            String     @unique
  passwordHash     String
  role             UserRole   @default(USER)
  status           UserStatus @default(ACTIVE)
  failedLoginCount Int        @default(0)
  lockedUntil      DateTime?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  devices            Device[]
  sessions           Session[]
  containers         Container[]
  resourceAllocation ResourceAllocation?
  sshKeys            SshKey[]
  activityLogs       ActivityLog[]
  sharedFolders      SharedFolder[]        @relation("CreatedFolders")
  folderMemberships  SharedFolderMember[]
  notifications      Notification[]
  emailVerifications EmailVerification[]
  sentMessages       Message[]             @relation("SentMessages")
  receivedMessages   Message[]             @relation("ReceivedMessages")
  approvedDevices    Device[]              @relation("ApprovedDevices")

  @@map("users")
}

// ============================================================
// Device
// ============================================================
enum DeviceStatus {
  PENDING
  APPROVED
  REJECTED
  REVOKED
}

model Device {
  id          String       @id @default(cuid())
  userId      String
  fingerprint String
  name        String
  os          String
  status      DeviceStatus @default(PENDING)
  approvedBy  String?
  lastSeenAt  DateTime?
  createdAt   DateTime     @default(now())

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  approver User?     @relation("ApprovedDevices", fields: [approvedBy], references: [id])
  sessions Session[]
  sshKeys  SshKey[]

  @@unique([userId, fingerprint])
  @@map("devices")
}

// ============================================================
// Session
// ============================================================
model Session {
  id               String   @id @default(cuid())
  userId           String
  deviceId         String
  refreshTokenHash String
  ipAddress        String
  userAgent        String?
  expiresAt        DateTime
  isRevoked        Boolean  @default(false)
  createdAt        DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  device Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// ============================================================
// Container
// ============================================================
enum ContainerStatus {
  CREATING
  RUNNING
  STOPPED
  ERROR
  REBUILDING
}

model Container {
  id          String          @id @default(cuid())
  userId      String          @unique
  containerId String?         @unique
  name        String          @unique
  sshPort     Int             @unique
  status      ContainerStatus @default(CREATING)
  imageTag    String          @default("latest")
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  resourceUsages ResourceUsage[]

  @@map("containers")
}

// ============================================================
// Resource Allocation
// ============================================================
model ResourceAllocation {
  id            String @id @default(cuid())
  userId        String @unique
  cpuCores      Int    @default(2)
  memoryMb      Int    @default(8192)
  storageSsdGb  Int    @default(50)
  storageHddGb  Int    @default(200)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("resource_allocations")
}

// ============================================================
// Resource Usage (time series)
// ============================================================
model ResourceUsage {
  id              String   @id @default(cuid())
  containerId     String
  cpuPercent      Float
  memoryUsedMb    Float
  storageSsdUsedGb Float
  storageHddUsedGb Float
  networkRxBytes  BigInt   @default(0)
  networkTxBytes  BigInt   @default(0)
  recordedAt      DateTime @default(now())

  container Container @relation(fields: [containerId], references: [id], onDelete: Cascade)

  @@index([containerId, recordedAt])
  @@map("resource_usages")
}

// ============================================================
// SSH Key
// ============================================================
model SshKey {
  id          String   @id @default(cuid())
  userId      String
  deviceId    String
  publicKey   String
  fingerprint String
  label       String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  device Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@unique([userId, fingerprint])
  @@map("ssh_keys")
}

// ============================================================
// Activity Log
// ============================================================
model ActivityLog {
  id           String   @id @default(cuid())
  userId       String?
  activityType String
  description  String
  ipAddress    String?
  metadata     Json?
  createdAt    DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([activityType])
  @@index([userId])
  @@index([createdAt])
  @@map("activity_logs")
}

// ============================================================
// Shared Folder
// ============================================================
model SharedFolder {
  id        String   @id @default(cuid())
  name      String   @unique
  path      String   @unique
  createdBy String
  createdAt DateTime @default(now())

  creator User                 @relation("CreatedFolders", fields: [createdBy], references: [id])
  members SharedFolderMember[]

  @@map("shared_folders")
}

enum FolderPermission {
  READ
  READWRITE
}

model SharedFolderMember {
  id         String           @id @default(cuid())
  folderId   String
  userId     String
  permission FolderPermission @default(READ)

  folder SharedFolder @relation(fields: [folderId], references: [id], onDelete: Cascade)
  user   User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([folderId, userId])
  @@map("shared_folder_members")
}

// ============================================================
// Notification
// ============================================================
enum NotificationType {
  INFO
  WARNING
  ERROR
  DEVICE_APPROVAL
  SYSTEM
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType @default(INFO)
  title     String
  message   String
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@map("notifications")
}

// ============================================================
// Email Verification (2FA)
// ============================================================
model EmailVerification {
  id        String   @id @default(cuid())
  userId    String
  code      String
  ipAddress String
  expiresAt DateTime
  attempts  Int      @default(0)
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, code])
  @@map("email_verifications")
}

// ============================================================
// Message (Chat)
// ============================================================
model Message {
  id          String    @id @default(cuid())
  senderId    String
  recipientId String?
  channelId   String?
  content     String
  readAt      DateTime?
  createdAt   DateTime  @default(now())

  sender    User  @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  recipient User? @relation("ReceivedMessages", fields: [recipientId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([recipientId])
  @@index([channelId])
  @@map("messages")
}
